generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model expense {
  id        Int      @id @default(autoincrement())
  amount    Int
  category  String
  type      String   // 'income' または 'expense'
  user_id   String   // ユーザーID
  createdAt DateTime @default(now())

  // ↓ 重要：DB上のテーブル名を小文字の 'expense' に強制する
  @@map("expense")
}