generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Expense {
  id        Int      @id @default(autoincrement())
  amount    Int
  category  String   @default("未分類")
  type      String   // income | expense
  createdAt DateTime @default(now())
}
